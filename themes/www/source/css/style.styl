// fondo con circulos
.circles
  width 100%
  height 100%
  position absolute
  z-index -1
  
  padding 0 20px
  
.circle
  position absolute
  width 105px
  height 105px
  top 0
  left 0
  transform translate(-0%, -0%);
  background-image url("../img/circle.svg")
  background-repeat no-repeat;
  background-size 100px 100px;
  background-position-x 1.5px
  background-position-y 1.5px
  transition all 0.5s ease-in-out;
  &:nth-child(1) 
    right  10vw
    left auto
    transform scale(1.5) 
    @media tablet
      right  5vw
      left auto
  &:nth-child(2) 
    right  55vw
    left auto
    top  20%
    transform scale(1.5)
    @media movil
      transform scale(2)
    @media tablet
      top  60%
      left  0vw 
  &:nth-child(3) 
    right 10vw
    left  auto
    top  40%
    transform scale(1.8)  
    @media tablet
      right 50%
      left  auto
  &:nth-child(4) 
    left  5vw
    top  55%
    @media tablet
      left  85%
  &:nth-child(5) 
    right   0vw
    left auto
    top  65%
    transform scale(0.8)  
    @media tablet
      transform scale(1.2)
      top  85%
      right   35%
  &:nth-child(6) 
    left  10vw
    top  80%
    transform scale(2)
    @media tablet
      left  4vw
      top  0vh
      transform scale(1.1)
    @media escritorio-s
      left  10%
      top  0vh
  &:nth-child(7) 
    right   10vw
    left auto
    top  95%
    transform scale(1.5)  
    @media tablet
      transform scale(0)  


