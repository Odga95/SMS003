.hero__text
  color  #fff
  position  absolute
  text-align  center
  top  50%
  left  50%
  transform  translate(-50%, -50%)
  font-size  50px
  z-index  1

.hero__subtitle
  margin-top  20px

.button
  background  #312eeb
  color  color-white
  border-radius 18px
  font-size  font-3xs
  padding  5px 15px
  text-decoration  none
  z-index 1

.cube
  position  absolute
  top  80vh
  left  45vw
  width  10px
  height  10px
  border  solid 1px darken(#0040C1, 10%)
  transform-origin  top left
  transform  scale(0) rotate(0deg) translate(-50%, -50%)
  animation  cube 6s ease-in forwards infinite

  &:nth-child(4n)
    border-color  lighten(#0040C1, 40%)
  &:nth-child(3)
    animation-delay  0s
    left  25vw
    top  40vh
  &:nth-child(4)
    animation-delay  1s
    left  75vw
    top  50vh
  &:nth-child(5)
    animation-delay  0s
    left  90vw
    top  10vh
  &:nth-child(6)
    animation-delay  1s
    left  10vw
    top  85vh
  &:nth-child(7)
    animation-delay  2s
    left  50vw
    top  10vh

    

@keyframes cube
  from
    transform  scale(0) rotate(0deg) translate(-50%, -50%)
    opacity  1

  to
    transform  scale(20) rotate(960deg) translate(-50%, -50%)
    opacity  0


