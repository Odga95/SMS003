

footer
  background-image: url("../img/wavesfooter.svg")
  background-repeat no-repeat;
  background-position: 50% 0;
  background-size: cover;
  .justify-text
    text-align: justify

  .footer-container
    padding 150px 20px 5px 20px
    display flex
    justify-content: center
    width: 100%
    height: 100%
    flex-wrap: wrap
    @media tablet
      padding 150px 120px 5px 120px

    .social-networks,
    .gallery,
    .oficial-info,
    .company
      color color-white
      width: 277px
      padding 20px
      line-height: 2
      height: 100%
      display: flex
      flex-wrap: wrap
      justify-content: left
      p
        font-family: fontfam1
        width 100%
        margin 0px
        font-weight: 600
        font-size: font-l
      @media tablet
        width: 280px
      @media escritorio-s
        width: 300px
      .location,.contact,.email
        display: flex
        justify-content: center
        align-items: center
        gap 20px
      a
        color color-white
        display: flex
        width: 40px
        height: 40px
        border 2px solid white
        border-radius: 5px
        padding 2px
        justify-content: center
        align-items: center
        margin 5px
      .button
        width: fit-content
        font-family: fontfam2
        border none
        border-radius: 15px
        padding: 10px 15px
        margin auto
        margin 15px auto
        text-align: center
      .logo
        width: 100%
        height: 100%
        img,svg
          width: 100%
          height: auto
          object-fit: cover
    .oficial-info
      justify-content: left
    .fa-solid,
    .button
      font-size: font-l
    .gallery
      a
        display: flex
        width 64px
        height: 64px
        border: none
        border-radius: none
        margin 0px
        margin-right 15px
        margin-bottom: 15px
        img
          width: 100%
          height: 100%
          object-fit: cover
    .legal, .year
      width: 100%
      text-align: center
      justify-content: center
      color color-white
      ul
        display: flex
        justify-content: center
        li
          width: fit-content
          height: auto
          list-style: none
          justify-content: center
          a
            width: 100%
            height: fit-content
            line-height: 2
            display: flex
            color white
            text-decoration: none
            padding 5px
            text-align: center
          a:hover
            font-weight: 600

