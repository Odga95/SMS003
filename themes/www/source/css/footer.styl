color-transparent = rgba(255, 255, 255, 0)

.color-transparent
  display block


footer
  background-image: url("../img/wavesfooter.svg")
  background-repeat no-repeat;
  background-position: 50% 0;
  background-size: cover;
  
  .footer-container
    padding 150px 120px 40px 120px
    display flex
    justify-content: center
    text-align: center
    width: 100%
    height: 100%
    flex-wrap: wrap

    .company
      color color-white
      width: 90%
      padding 20px
      line-height: 2
      text-align: justify
      height: 100%
      @media movil
        width: 50%
      @media tablet
        width: 33%
      @media escritorio-s
        width: 25%
      .logo
        width: 100%
        height: 100%
        img,svg
          width: 100% 
          height: auto
          object-fit: cover
      .button
        font-size: font-l
    .social-networks
      color color-white
      width: 90%
      padding 20px
      line-height: 2
      text-align: justify
      height: 100%
      display: flex
      flex-wrap: wrap
      justify-content: center
      p
        font-family: fontfam1
        width 100%
        margin 0px
        text-align: center
        font-weight: 600
        font-size: font-l 
      @media movil
        width: 50%
      @media tablet
        width: 33%
      @media escritorio-s
        width: 25%
      a
        color color-white
        display: flex
        width: 40px
        height: 40px
        border 2px solid white
        border-radius: 5px
        padding 2px
        justify-content: center
        text-align: center
        align-items: center
        margin 5px

    .oficial-info
      color color-white
      width: 90%
      padding 20px
      line-height: 2
      text-align: justify
      height: 100%
      display: flex
      flex-wrap: wrap
      justify-content: center
      p
        font-family: fontfam1
        width 100%
        margin 0px
        text-align: center
        font-weight: 600
        font-size: font-l
      @media movil
        width: 50%
      @media tablet
        width: 33%
      @media escritorio-s
        width: 25%
      .location,.contact,.email
        display: flex
        justify-content: center
        align-items: center 
        gap 20px
    .fa-solid
      font-size: font-l
    