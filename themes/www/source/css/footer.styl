
footer
  background-image: url("../img/wavesfooter.svg")
  background-repeat no-repeat;
  background-position: 50% 0;
  background-size: cover;
  
  .footer-container
    padding 150px 120px 40px 120px
    display flex
    justify-content: center
    text-align: center
    width: 100%
    height: fit-content
    flex-wrap: wrap

    .company
      color color-white
      width: 90%
      padding 20px
      line-height: 2
      text-align: justify
      height: 100%
      @media movil
        width: 50%
      @media tablet
        width: 33%
      @media escritorio-s
        width: 25%
      .logo
        width: 100%
        height: 100%
        img,svg
          width: 100% 
          height: auto
          object-fit: cover
      .button
        font-size: font-l





